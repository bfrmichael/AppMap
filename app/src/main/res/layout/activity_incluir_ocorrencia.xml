<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagem_ocorrencia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_ocorrencia" />

    <EditText
        android:id="@+id/titulo_ocorrencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descricao_ocorrencia" />

    <EditText
        android:id="@+id/descricao_ocorrencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categoria_ocorrencia" />

    <Spinner
        android:id="@+id/categoria_ocorrencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_categoria_ocorrencia" >
    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/place_autocomplete_prediction_horizontal_margin"
        android:layout_marginBottom="@dimen/place_autocomplete_prediction_horizontal_margin"
        android:background="@color/colorPrimary"
        android:shadowColor="@color/colorPrimaryDark"
        android:textColor="@color/colorTextWhite"
        android:text="@string/button_salvar_ocorrencia"
        android:onClick="salvarOcorrencia"/>

    <TextView
        android:id="@+id/exibir_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>