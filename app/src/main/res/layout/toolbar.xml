<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:shadowColor="@color/colorPrimaryDark"
    android:elevation="4dp"
    tools:context=".MapsActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,4">

        <TableRow>

            <TextView
                android:text="@string/app_name"
                android:textColor="@color/textColorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:gravity="left" />

            <Button
                android:id="@+id/button_atualizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/colorPrimary"
                android:drawableRight="@drawable/ic_refresh_black_24dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="listarUltimasOcorrencias"
                android:layout_gravity="right"
                android:background="@color/colorPrimary"
                android:drawableRight="@drawable/ic_view_list_black_24dp"/>

            <Button
                android:background="@color/colorPrimary"
                android:onClick="apresentarFiltro"
                android:drawableRight="@drawable/ic_find_replace_white_24dp"
                android:layout_marginRight="8dp"/>

        </TableRow>

    </TableLayout>

</android.support.v7.widget.Toolbar>